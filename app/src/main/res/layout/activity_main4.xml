<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tablayoutproject2.Main4Activity"
    android:background="#FFBCD7">


    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="197dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goTo1"
            android:text="Main" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goTo2"
            android:text="Introduce" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goTo3"
            android:text="Scene" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goTo4"
            android:text="Toast" />
    </LinearLayout>


    <GridLayout
        android:layout_width="234dp"
        android:layout_height="194dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout"
        android:layout_marginRight="8dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_column="0"
            android:layout_row="16"
            android:text="TextView"
            android:gravity="center"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="223dp"
            android:layout_height="78dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="copy"
            android:text="Click"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="169dp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
